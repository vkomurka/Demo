@model IEnumerable<Demo.Contracts.Dtos.ProductCategoryDto>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product Categories</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="ProductCategories" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>
                Create New Uom
            </a>
        </div>
    </div>

    <br /><br />

    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
        <tr>
            <th>Name</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var uom in Model.OrderBy(c=>c.Name))
        {
            <tr>
                <td>@uom.Name</td>
                <td style="width: 250px">
                    <div class="w-100 btn-group" role="group">
                            <a asp-controller="ProductCategories" asp-action="Edit" asp-route-id="@uom.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>
                            Edit
                        </a>
                            <a asp-controller="ProductCategories" asp-action="Delete" asp-route-id="@uom.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i>
                            Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>