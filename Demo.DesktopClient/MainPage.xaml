<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Demo.DesktopClient.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Editor x:Name="DemoServerBaseUrlEditor"></Editor>

            <Button
                x:Name="SaveButton"
                Text="Save"
                Clicked="SaveButton_OnClicked"
                HorizontalOptions="Center" />
            
            <Label x:Name="InfoLabel"></Label>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
