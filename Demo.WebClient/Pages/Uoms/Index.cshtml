@page
@model Demo.WebClient.Pages.Uoms.IndexModel

@if (TempData["success"] != null)
{
    <h2>@TempData["success"]</h2>
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Uoms</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i>
                Create New Uom
            </a>
        </div>
    </div>

    <br /><br />

    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var uom in Model.Uoms)
            {
                <tr>
                    <td>@uom.Code</td>
                    <td style="width: 200px">
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="Edit" asp-route-id="@uom.Id"  class="btn btn-primary mx-2">
                                @*<i class="bi bi-pencil-square"></i>*@
                                Edit
                            </a>
                            <a asp-page="Delete" asp-route-id="@uom.Id" class="btn btn-danger mx-2">
                                @* <i class="bi bi-trash-fill"></i>*@
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>